@page
@model UAR.Web.Pages.Admin.DropdownsModel

<h2 class="mb-3">Admin: Dropdown Options</h2>
<p class="text-muted">Manage static dropdown values used across the request form.</p>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="bg-white rounded-4 shadow-sm p-3">
            <h5>Add / update option</h5>
            <form method="post" asp-page-handler="Add">
                <div class="mb-2">
                    <label class="form-label" asp-for="NewOption.Category">Category</label>
                    <input class="form-control" asp-for="NewOption.Category" placeholder="Department, Location, UserType, AccessLevel, System" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="NewOption.Value">Value</label>
                    <input class="form-control" asp-for="NewOption.Value" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="NewOption.SortOrder">Sort order</label>
                    <input class="form-control" asp-for="NewOption.SortOrder" type="number" />
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="NewOption.IsActive" />
                    <label class="form-check-label" asp-for="NewOption.IsActive">Active</label>
                </div>
                <button class="btn btn-primary" type="submit">Save option</button>
            </form>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="bg-white rounded-4 shadow-sm p-3">
            <h5>Existing options</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Category</th>
                            <th>Value</th>
                            <th>Sort</th>
                            <th>Active</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var option in Model.Options)
                        {
                            <tr>
                                <td>@option.Category</td>
                                <td>@option.Value</td>
                                <td>@option.SortOrder</td>
                                <td>@option.IsActive</td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@option.Id">
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
