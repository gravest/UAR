@page
@model UAR.Web.Pages.Requests.CreateModel

<h2 class="mb-3">User Access Request Form</h2>
<p class="text-muted">Fields marked with an asterisk (*) are required.</p>

<form method="post" class="mb-5">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    @{
        ViewData["UarNumberValue"] = "Auto-generated on submit";
        ViewData["UarNumberHint"] = "System-generated request identifier with prefix UAR-.";
    }

    @await Html.PartialAsync("_RequestFormFields", Model)

    <button type="submit" class="btn btn-primary">Submit request</button>
</form>
