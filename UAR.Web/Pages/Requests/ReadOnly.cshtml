@page "{id:int}"
@model UAR.Web.Pages.Requests.ReadOnlyModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Request @Model.RequestDetails?.RequestNumber</h2>
        <p class="text-muted mb-0">Display-only view for printing.</p>
    </div>
    <div class="d-flex gap-2 no-print">
        <button type="button" class="btn btn-outline-primary" onclick="window.print()">Print</button>
        <a class="btn btn-outline-secondary" asp-page="/Requests/Details" asp-route-id="@Model.RequestDetails?.Id">Back</a>
    </div>
</div>

@if (Model.RequestDetails is null)
{
    <div class="alert alert-warning">Request not found.</div>
}
